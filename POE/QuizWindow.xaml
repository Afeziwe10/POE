<Window x:Class="CyberSecurityChatbot.QuizWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CyberSecurityChatbot"
        mc:Ignorable="d"
        Title="QuizWindow" Height="400" Width="800" WindowStartupLocation="CenterScreen" Background="#301F18">
    <Grid Margin="20">
        <Border Background="#E2B889" CornerRadius="15" Padding="20">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock x:Name="QuestionText" Text="Question Will appear" FontSize="18" Foreground="#301F18" Margin="0,0,0,10" Width="500"/>
                <StackPanel x:Name="OptionsPanel"/>
                <Button x:Name="NextButton" Content="Next Question" Background="#D1825F" Foreground="White" Padding="10" Margin="0,15,0,0" Click="NextButton_Click"/>
                <TextBlock x:Name="FeedbackText" Text="" FontWeight="Bold" Foreground="#774D3A" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
