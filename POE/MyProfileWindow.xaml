<Window x:Class="CyberSecurityChatbot.MyProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CyberSecurityChatbot"
        mc:Ignorable="d"
        Title="MyProfileWindow" Height="400" Width="500" WindowStartupLocation="CenterScreen" Background="#301F18">
    <Grid Margin="20">
        <Border Background="#E2B889" CornerRadius="15" Padding="20">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="My Profile" FontSize="22" FontWeight="Bold" Foreground="#301F18" HorizontalAlignment="Center"/>
                <StackPanel Orientation="Vertical" Margin="0,10,0,0">
                    <TextBlock Text="Useername:" FontWeight="Bold" Foreground="#301F18"/>
                    <TextBlock x:Name="UsernameText" Foreground="#301F18"/>
                    <TextBlock Text="Recent Activity:" FontWeight="Bold" Margin="0,15,0,5" Foreground="#301F18"/>
                    <ListBox x:Name="ActivityList" Height="150" Background="White" Foreground="Black" BorderThickness="1"/>
                </StackPanel>

                <Button Content="Close" Width="100" Background="#D1825F" Foreground="White" Margin="0,15,0,0" Click="CloseButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
